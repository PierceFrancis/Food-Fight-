#has Movement and oreints player 1 at player 2 

extends CharacterBody2D


# player movement speed
@export var speed = 400

#movement
func get_input():
	var input_direction = Input.get_vector("p1left", "p1right", "p1up", "p1down")
	velocity = input_direction * speed

func _physics_process(delta: float) -> void:
	#locks on to player 2,  might have to tweak the pathfor player 2. I got the path py dragging player 2 node into the script
	look_at($"../player_2".position)
	get_input()
	move_and_slide()

	

	
